{
  "version": 2,
  "builds": [
    {
      "src": "buddyworthcalc/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.10",
        "installCommand": "pip install -r requirements.txt",
        "startCommand": "gunicorn buddyworthcalc.wsgi:application"
      }
    }
  ],
  "routes": [
    {
      "src": "/calculate-price",
      "dest": "buddyworthcalc/wsgi.py"
    },
    {
      "src": "/",
      "dest": "buddyworthcalc/wsgi.py"
    }
  ]
}